extends shared/_master

block body
  link(href='static/css/font-awesome.css' rel='stylesheet' type='text/css')

  <!-- Plugin CSS -->
  link(href='static/css/magnific-popup.css', rel='stylesheet')

  <!-- Theme CSS -->
  link(href='static/css/creative.css', rel='stylesheet')
  if !user
    header
      .header-content
        .header-content-inner
          h1#homeHeading Your Favourite Sort of Forum
          hr
          p
            | TellUS fourm is the perfect place to learn, to comunicate, to be social
          a.btn.btn-primary.btn-xl.page-scroll(href='#about') Find Out More
    section#about
      .container
        .row-centered
          .col-lg-offset-2.text-center
            h2.section-heading We've got what you need!
            hr.light
            p.text-faded
              | TellUS has users from all around the world, from east to the west. Join us!
            a.page-scroll.btn.btn-default.btn-xl.sr-button(href='#portfolio') Sneack peek a little more
    section#services
      .container
        .row
          .col-lg-12.text-center
            h2.section-heading At Your Service
            hr.primary
      .container
        .row
          .col-lg-3.col-md-6.text-center
            .service-box
              i.fa.fa-4x.fa-diamond.text.sr-icons
              h3 Cool stories
              p.text-muted Forget about boring old stuff
          .col-lg-3.col-md-6.text-center
            .service-box
              i.fa.fa-4x.fa-paper-plane.text.sr-icons
              h3 Ready everytime
              p.text-muted 24/7 support
          .col-lg-3.col-md-6.text-center
            .service-box
              i.fa.fa-4x.fa-newspaper-o.text.sr-icons
              h3 Up to Date Info
              p.text-muted We update the app to meet the lates tendecies
          .col-lg-3.col-md-6.text-center
            .service-box
              i.fa.fa-4x.fa-heart.text.sr-icons
              h3 Made with Love
              p.text-muted You have to make your websites with love these days!
  section#portfolio.no-padding
    .container-fluid
      .row.no-gutter
        - for (var i = 0; i < categories.length; ++i) {
          .col-lg-4.col-sm-6
            a.portfolio-box(href=`/Posts/${categories[i].title}`, id=categories[i].title)
              img.img-responsive-home(src=`/static/images/categories/cropped/${categories[i].title}.jpg`, alt=`${categories[i].title}`)
              .portfolio-box-caption
                .portfolio-box-caption-content
                  .project-category.text-faded
                    | Category
                  .project-name= categories[i].title 
        - }
  if !user
    section#enter-forum
      .container
        .row-centered
          .col-lg-offset-2.text-center
            h2.section-heading Lets GO!
            hr.light
            p.text-faded
              | Our forum has everything you need to start connectin with the world.
            a#lets-go-register-btn.page-scroll.btn.btn-default.btn-xl.sr-button(href='/auth/register') I'm in!         
  if user
    br
    .container.chat-container
        // Websocket Chat:
        ul#messages
        <form class="chat" action="">
            <input id="m" autocomplete="off" /><button>Send</button>
        </form>
    //Web Socket script 
    script(src='/static/js/jquery.min.js')
    script(src='/static/js/messenger.js')

  script(src='/static/js/jquery.min.js')
  // Bootstrap Core JavaScript
  //- script(src='vendor/bootstrap/js/bootstrap.min.js')
  // Plugin JavaScript
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
  script(src='/static/js/scrollreveal.min.js')
  script(src='/static/js/jquery.magnific-popup.min.js')
  //- // Theme JavaScript
  script(src='/static/js/creative.js')
    
