extends shared/_master

block body
    // Page Content
    .container.categories
        // Page Heading
        div.categories-title
            h1.my-4
                |Categories
        - for (var i = 0; i < showcategories.length; ++i) {
            .row
                .col-md-6.portfolio-item
                    a(href='/Posts/'+showcategories[i].title)
                        h3=showcategories[i].title
                            .wrapper
                            span.square.individual
                                img.ninth.before.after(src="/static/images/categories/"+showcategories[i].title+".jpg", height="200", width="400")
                -i++
                if i<showcategories.length
                    .col-md-6.portfolio-item
                        a(href='/Posts/'+showcategories[i].title)
                            h3=showcategories[i].title
                                .wrapper
                                span.square.individual
                                    img.ninth.before.after(src="/static/images/categories/"+showcategories[i].title+".jpg", height="200", width="400")
        - }
        
        // Pagination
        ul.pagination.justify-content-center
            li.page-item
                a.page-link(href='?page=1', aria-label='Previous')
                    span(aria-hidden='true') «
                    span.sr-only Previous
            each pageN in navigationNumbers
                li.page-item
                    a.page-link(href='?page='+(pageN))=pageN
            li.page-item
                a.page-link(href='?page='+(pagesNum), aria-label='Next')
                    span(aria-hidden='true') »
                    span.sr-only Next

    if user
        br
        .container.chat-container
            // Websocket Chat:
            ul#messages
            <form class="chat" action="">
                <input id="m" autocomplete="off" /><button>Send</button>
            </form>
        //Web Socket script 
        script(src='https://code.jquery.com/jquery-1.11.1.js')
        script(src='/static/js/messenger.js')