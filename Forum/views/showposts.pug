extends shared/_master

block body
    // Page Content
    .container
        // Page Heading
        h1.my-4
            | Page Heading 
            small Secondary Text
        each post in showposts
            // Project One
            .row
                .col-md-7
                    a(href='#')
                        img.img-fluid.rounded.mb-3.mb-md-0(src='http://placehold.it/700x300', alt='')
                .col-md-5
                    h3=post.title
                    p=post.author
                    a.btn.btn-primary(href='#') View Post
            // /.row
            hr
        
        // Pagination
        ul.pagination.justify-content-center
            li.page-item
                a.page-link(href='?page=1', aria-label='Previous')
                    span(aria-hidden='true') «
                    span.sr-only Previous
            each pageN in showPages
                li.page-item
                    a.page-link(href='?page='+(pageN))=pageN
            li.page-item
                a.page-link(href='?page='+(pagesNum), aria-label='Next')
                    span(aria-hidden='true') »
                    span.sr-only Next
    // /.container
