extends shared/_master

block body
    // Page Content
    .container
        // Page Heading
        h1.my-4
            | Page Heading 
            small Secondary Text
        each post in showposts
            // Project One
            .row
                .col-md-7
                    a(href='#')
                        img.img-fluid.rounded.mb-3.mb-md-0(src='http://placehold.it/700x300', alt='')
                .col-md-5
                    h3=post.title
                    p=post.author
                    a.btn.btn-primary(href='#') View Post
            // /.row
            hr
        
        // Pagination
        ul.pagination.justify-content-center
            li.page-item
                a.page-link(href='#', aria-label='Previous')
                    span(aria-hidden='true') «
                    span.sr-only Previous
            li.page-item
                a.page-link(href='#') 1
            li.page-item
                a.page-link(href='#') 2
            li.page-item
                a.page-link(href='#') 3
            li.page-item
                a.page-link(href='#', aria-label='Next')
                    span(aria-hidden='true') »
                    span.sr-only Next
    // /.container
    // Footer
    footer.py-5.bg-inverse
        .container
            p.m-0.text-center.text-white Copyright © Your Website 2017
        // /.container
    // Bootstrap core JavaScript
    script(src='/libs/jquery/dist/jquery.min.js')
    script(src='/libs/tether/dist/js/tether.min.js')
    script(src='/libs/bootstrap/dist/js/bootstrap.min.js')
