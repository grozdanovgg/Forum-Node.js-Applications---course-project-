extends shared/_master

block body
    .container
        br
        if message
            h1.error-message=message
        form(action='/auth/login', method='post')
            div
                label Username:
                br
                input#username-login-input(type='text', name='username', autofocus)
            div
                label Password:
                br
                input#password-login-input(type='password', name='password')
            div
                button#login-btn.btn.btn-success(type='submit', value='submit') Login
        br